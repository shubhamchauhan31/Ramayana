<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:lottie_fileName="welcome.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hind_vadodara_light"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="।। जय श्री राम ।।"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:text="सुस्वागत"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/hind_vadodara_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="5dp"
        android:fontFamily="@font/hind_vadodara_light"
        android:text="इस App को डाउनलोड करने के लिये आपका धन्यवाद एवं प्रभु श्रीराम आप पर कृपा बनाये रखे।।"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="5dp"
        android:fontFamily="@font/hind_vadodara_light"
        android:text="इस App की कुछ विशेष विशेताओ से आपका परिचय करवाते है, जो आपको इस App की सम्पूर्ण विशेषताओं को उपयोग में लाने के लिये, लाभकारी होंगी।"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>